server {
    server_name prettykitty.serveblog.net;
    
    location /admin/ {
        proxy_pass http://127.0.0.1:8080;
        client_max_body_size 20M;
    }


    location /api/ {
        proxy_pass http://127.0.0.1:8080;
        client_max_body_size 20M;
    }
	
    location /media/ {
	alias /var/www/kittygram/media/;

    }

    location / {
        root   /var/www/kittygram;
        index  index.html index.htm;
        try_files $uri /index.html;
    }


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/prettykitty.serveblog.net/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/prettykitty.serveblog.net/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

} 

server {
    server_name managetasks.ddns.net;
    
    location /admin/ {
        proxy_pass http://127.0.0.1:8000;
    }


    location /api/ {
	proxy_pass http://127.0.0.1:8000;
    }
    
    location / {
        root   /var/www/taski;
        index  index.html index.htm;
        try_files $uri /index.html;
    }


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/managetasks.ddns.net/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/managetasks.ddns.net/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

server {
    if ($host = managetasks.ddns.net) {
        return 301 https://$host$request_uri;
    } # managed by Certbot



    listen 80;
    server_name 158.160.73.224 managetasks.ddns.net;
    return 404; # managed by Certbot


}
server {
    if ($host = prettykitty.serveblog.net) {
        return 301 https://$host$request_uri;
    } # managed by Certbot



    listen 80;
    server_name prettykitty.serveblog.net;
    return 404; # managed by Certbot


}
